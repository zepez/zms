{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "lint": {
      "cache": true,
      "persistent": false
    },
    "script:scaffold": {
      "cache": true,
      "persistent": false
    },
    "db:create": {
      "cache": true,
      "persistent": false
    },
    "db:migrate": {
      "cache": true,
      "persistent": false,
      "dependsOn": ["db:create"]
    },
    "build": {
      "cache": false,
      "persistent": false,
      "dependsOn": ["script:scaffold", "db:migrate"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["script:scaffold", "db:migrate"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["script:scaffold", "db:migrate"]
    }
  }
}
